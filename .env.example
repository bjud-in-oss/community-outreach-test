# Master Plan 2.0 - Environment Configuration

# =============================================================================
# FAS 0 (CRAWL) - Grundläggande Konfiguration
# =============================================================================

# Supabase (Databas, Auth, Fillagring)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Groq (Emotionell Motor - Medvetna Rondellen)
GROQ_API_KEY=your_groq_api_key

# =============================================================================
# FAS 1 (WALK) - Agent Integration
# =============================================================================

# Gemini (Kärn-agent Arbetshäst)
GEMINI_API_KEY=your_gemini_api_key

# OpenAI (Backup LLM)
OPENAI_API_KEY=your_openai_api_key

# GitHub (Jules Integration)
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO_OWNER=bjud-in-oss
GITHUB_REPO_NAME=community-outreach-test

# LlamaIndex (Minnesystem)
LLAMAINDEX_CACHE_DIR=./cache/llamaindex

# =============================================================================
# FAS 2 (RUN) - Senior Experience
# =============================================================================

# Redis (Session & Cache)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn
ANALYTICS_ID=your_analytics_id

# =============================================================================
# FAS 3 (FLY) - Advanced Features
# =============================================================================

# Google Cloud (Kyrktjänst-översättning)
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project
GOOGLE_CLOUD_SPEECH_API_KEY=your_speech_to_text_key

# DeepL (Högkvalitativ översättning)
DEEPL_API_KEY=your_deepl_api_key

# FamilySearch (Familjehistoria integration)
FAMILYSEARCH_API_KEY=your_familysearch_key

# =============================================================================
# Development & Testing
# =============================================================================

# Environment
NODE_ENV=development
PORT=3000

# Debug Levels
DEBUG_CONSCIOUS_AGENT=false
DEBUG_CORE_AGENT=false
DEBUG_COMMUNICATION_BRIDGE=false

# Testing
TEST_SENIOR_MODE=true
MOCK_EXTERNAL_APIS=false

# =============================================================================
# Kostnadskontroll (Viktigt för Seniorer)
# =============================================================================

# Rate Limiting (Håll inom gratis tiers)
MAX_REQUESTS_PER_MINUTE=30
MAX_TOKENS_PER_DAY=10000

# Fallback Strategies
ENABLE_FALLBACK_TO_FREE_APIS=true
ENABLE_COST_WARNINGS=true

# =============================================================================
# Senior-Säkerhet
# =============================================================================

# Guardrails
ENABLE_TECHNICAL_JARGON_FILTER=true
ENABLE_ERROR_TRANSLATION=true
ENABLE_GRACEFUL_DEGRADATION=true

# Support
HUMAN_SUPPORT_EMAIL=support@example.com
EMERGENCY_CONTACT=+46-xxx-xxx-xxxx